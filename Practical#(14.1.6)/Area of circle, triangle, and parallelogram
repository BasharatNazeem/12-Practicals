#include<iostream>
#include<cmath>
using namespace std;

double areac(double r){
    return M_PI*(r*r);
}
double areap(double b,double h){
    return b*h;
    
}

double areat(double base, double height){
    return 0.5*base*height;
}




int main(){
    double r,b,h;
    double base,height;


 cout<<"radius of circle ";
 cin>>r;

cout<<"area of the circle is = "<<areac(r)<<"\n\n\n";


/*FOR PARALELLOGRAMM*/
cout<<"Base of paralellogram = ";
cin>>b;
cout<<"Height of paralellogram = ";
cin>>h;
cout<<"area of paraellogram is = "<<areap(b,h)<<"\n\n";



/*FOR TRIANGLE*/
cout<<"enter value for base of triangle = ";
cin>>base;
cout<<"enter value for height of trianglr = ";
cin>>height;
cout<<"area of triangle is = "<<areat(base,height);
}

